/* 页面总体布局 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
  background-color: #f5f5f5;
  height: 100vh;
}

/* Logo 样式 */
.logo {
  font-size: 28px;
  font-weight: bold;
  color: #007acc;
  margin-bottom: 30px;
}

/* 切换登录方式的按钮 */
.toggle-method {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-bottom: 20px;
}

.toggle-button {
  background-color: #007acc;
  color: white;
  padding: 12px;
  border: none;
  border-radius: 5px;
  width: 150px;
  text-align: center;
  margin: 0 10px;
  font-size: 16px;
}

/* 注册按钮 */
.register-button {
  background-color: #28a745;
  color: white;
  padding: 12px;
  border: none;
  border-radius: 5px;
  width: 150px;
  text-align: center;
  margin: 0 10px;
  font-size: 16px;
}

/* 输入框容器 */
.input-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  margin-bottom: 20px;
}

/* 输入框 */
.input {
  flex-grow: 1;
  padding: 10px;
  font-size: 16px;
  border: 1px solid #ccc;
  border-radius: 5px;
  background-color: white;
}

/* 验证码按钮 */
.verify-button {
  margin-left: 10px;
  background-color: #007acc;
  color: white;
  padding: 10px;
  border-radius: 5px;
  font-size: 14px;
  border: none;
}

/* 登录按钮 */
.login-button {
  background-color: #007acc;
  color: white;
  padding: 14px;
  width: 100%;
  border-radius: 5px;
  font-size: 18px;
  text-align: center;
  border: none;
  margin-bottom: 30px;
}

/* 底部协议 */
.footer {
  margin-top: auto;
  text-align: center;
  font-size: 12px;
  color: #999;
}

.link {
  color: #007acc;
  text-decoration: underline;
}
.verify-button[disabled] {
  background-color: #ccc; /* 禁用状态下的背景色 */
  color: #666; /* 禁用状态下的文字颜色 */
}

/* 注册和返回登录按钮容器 */
.register-actions {
  display: flex;
  justify-content: space-between;
  width: 100%;
  margin-top: 20px;
}

/* 返回登录按钮 */
.return-button {
  background-color: #6c757d;
  color: white;
  padding: 12px;
  border: none;
  border-radius: 5px;
  width: 45%;
  text-align: center;
  font-size: 16px;
}

.register-button {
  width: 45%;
}

/* 头像上传区域 */
.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20px;
}

.avatar-button {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  overflow: hidden;
  border: 3px solid #007acc;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #e0e0e0;
  margin-bottom: 10px;
}

.avatar-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.avatar-tip {
  font-size: 14px;
  color: #666;
}

/* 优化的页面总体布局 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
  background-color: #f5f5f5;
  min-height: 100vh;
  box-sizing: border-box;
}
