.top {
  font-family: 'Courier New', Courier, monospace;
  text-align: center;
  font-size: 50rpx;
}
.con_list{
  position: relative;
}
.con_list .list{
  width:240px;
  height: auto;
  text-align: center;
  margin: auto;

}
.img_list{
  border:1px solid gray;
  border-radius: 20%;
  padding-top: 6px;
  padding-right: 6px;
  padding-left: 6px;
}
.img{
  width:400rpx;
  border-radius: 20%;
}
.input-container {
  display: flex;
  align-items: center;
}

